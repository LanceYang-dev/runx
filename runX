#!/bin/bash

workpath=/usr/share/runX

args=$*

cmd=""
containerid=""
while (( "$#" ))
do
    if [[ $1 = "--console-socket" ]]
    then
        pty=$2
        #cp $pty /root/pty
        echo LOL $pty >> /tmp/1
    fi
    if [[ $1 = "--"* ]]
    then
        shift
        shift
        continue
    fi
    if test -z "$cmd"
    then
        cmd=$1
        shift
        continue
    fi
    containerid=$1
    break
done

if test $cmd = "state"
then
    $workpath/state $containerid
elif test $cmd = "start"
then
    $workpath/start $containerid
elif test $cmd = "delete"
then
    $workpath/delete $containerid
else
    /usr/bin/docker-runc.orig $args
fi
